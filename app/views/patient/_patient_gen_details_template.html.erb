<% content_for :scripts do %>
    <script>

      $(function() {
        $("#input_pgd_dateOfBirth").datepicker(
            {
              changeMonth: true,
              changeYear: true,
              yearRange: "-100:+0",
              dateFormat: "yy-mm-dd"
            }
        );

      });

    </script>
<% end %>

<div id="patient_gen_details_left_div" style="height:40vh;padding-left:5px;">

  <div class="patients_details_general" style="height:20px;">
    <div style="height:22px;float;" class="patient_details_label">
      Name
    </div>
    <div style="height:22px;" class="patient_details_colon">
      :
    </div>
    <div style="height:30px;" class="patient_details_input">
      <input id="input_pgd_name" type="text" placeholder="Name Of The Patient" name="pgd[name]"/>
      <span id="span_pgd_name">Name Of The Patient</span>
    </div>
  </div>

  <div class="patients_details_general" style="height:20px;">
    <div style="height:22px;float;" class="patient_details_label">
      Relation Name
    </div>
    <div style="height:22px;" class="patient_details_colon">
      :
    </div>
    <div style="height:30px;" class="patient_details_input">
      <input id="input_pgd_relationName" type="text" placeholder="Patient's Relation Name" name="pgd[relationName]"/>
      <span id="span_pgd_relationName">Patient's Relation Name</span>
    </div>
  </div>

  <div class="patients_details_general" style="height:20px;">
    <div style="height:22px;float;" class="patient_details_label">
      Age
    </div>
    <div style="height:22px;" class="patient_details_colon">
      :
    </div>
    <div style="height:30px;" class="patient_details_input">

      <!--<div id="input_pgd_age_calendar_div" style="display:none;border:0px solid green;height:auto;float:left;margin-left:2px;" align="left">-->
        <!--<i class="fa fa-calendar" id="pgd_age_visit_calendar_icon" title="Select Date of Visit"></i>-->
        <!--<input size="1" type="text" id="age_datepicker" style="visibility:hidden;">-->
      <!--</div>-->

      <input type="text" id="input_pgd_dateOfBirth" name="pgd[dateOfBirth]">
      <span id="span_pgd_age">Age Of the Patient</span>
    </div>
  </div>

  <div class="patients_details_general" style="height:20px;">
    <div style="height:22px;float;" class="patient_details_label">
      Gender
    </div>
    <div style="height:22px;" class="patient_details_colon">
      :
    </div>
    <div style="height:35px;" class="patient_details_input" align="left">
      <div class="sssmh_combo slate" style="height:20px;">

        <div style="height: auto;">
          <select id="input_pgd_gender" name="pgd[gender]" style="margin-left: 0px;">
            <option value="1" checked>Male</option>
            <option value="2">Female</option>
          </select>
        </div>

        <div style="padding-top: 5px;height: auto;">
          <span id="span_pgd_gender">Gender (M / F)</span>
        </div>
      </div>
      <!--<input type="text" placeholder="Name Of The Patient"  name="gender"/>-->
    </div>
  </div>

  <div class="patients_details_general" style="height:20px;">
    <div style="height:22px;" class="patient_details_label">
      Alive
    </div>
    <div style="height:22px;" class="patient_details_colon">
      :
    </div>
    <div style="height:30px;padding-top:2px;" class="patient_details_input" align="left">
      <input type="checkbox" id="input_pgd_alive" name="pgd[alive]" checked="true" style="display:none;margin-left: 0px;">
      <span id="span_pgd_alive">Alive</span>
    </div>
  </div>

  <div class="patients_details_general" style="height:20px;">
    <div style="height:22px;float;" class="patient_details_label">
      Contact Number
    </div>
    <div style="height:22px;" class="patient_details_colon">
      :
    </div>
    <div style="height:30px;" class="patient_details_input">
      <input id="input_pgd_contact" type="text" placeholder="Contact Number" name="pgd[contact]"/>
      <span id="span_pgd_contact">Contact Number</span>
    </div>
  </div>


  <div class="patients_details_general" style="height:20px;">
    <div style="height:22px;float;" class="patient_details_label">
      Annual Income
    </div>
    <div style="height:22px;" class="patient_details_colon">
      :
    </div>
    <div style="height:30px;" class="patient_details_input">
      <input id="input_pgd_annualIncome" type="text" placeholder="Annual Income" name="pgd[annualIncome]"/>
      <span id="span_pgd_annualIncome">Annual Income</span>
    </div>
  </div>

  <div class="patients_details_general" style="height:20px;">
    <div style="height:22px;" class="patient_details_label">
      Village
    </div>
    <div style="height:22px;" class="patient_details_colon">
      :
    </div>
    <div style="height:35px;vertical-align: middle;padding-top: 3px;" class="patient_details_input" align="left">
      <div class="sssmh_combo slate" style="height:20px;">
        <select id="input_pgd_village_id" name="pgd[village_id]" style="margin-left: 0px;" onchange="selectRespectiveNodalVillage(this.value);">
          <option value="0">Choose a Village </option>
        </select>
        <div style="padding-top: 5px;height: auto;">
          <span id="span_pgd_village_id">Village Name</span>
        </div>
      </div>
    </div>
  </div>

  <!-- Nodal Village -->
  <div class="patients_details_general" style="height:20px;">
    <div style="height:22px;" class="patient_details_label">
      Nodal Village
    </div>
    <div style="height:22px;" class="patient_details_colon">
      :
    </div>
    <div style="height:35px;vertical-align: middle;padding-top: 3px;" class="patient_details_input" align="left">
      <div class="sssmh_combo slate" style="height:20px;">
        <select id="input_pgd_nodal_village_id" name="pgd[nodal_village_id]" style="margin-left: 0px;">
          <option value="0">Choose a Village </option>
        </select>
        <div style="padding-top: 5px;height: auto;">
          <span id="span_pgd_nodal_village_id">Nodal Village Name</span>
        </div>
      </div>
    </div>
  </div>


</div>

<div id="patient_gen_details_right_div" style="height:35vh;">

  <div class="patients_details_general" style="height:20px;">
    <div style="height:22px;float;" class="patient_details_label">
      CD No.
    </div>
    <div style="height:22px;" class="patient_details_colon">
      :
    </div>
    <div style="height:30px;" class="patient_details_input">
      <input id="input_pgd_cdno" type="text" placeholder="CD Number" name="pgd[cdno]"/>
      <span id="span_pgd_cdno">CD Number</span>
